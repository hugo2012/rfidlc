<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>popupHeader}" type="Message" state="None" stretch="true">
		<content>
			<MessageStrip text="{i18n>msgPopupNoLoadAssigned}" type="Information" showIcon="true" showCloseButton="false" class="sapUiResponsiveMargin"
				visible="{parts:[ 'Carrier' ], formatter:'.formatter.showInfo'}"></MessageStrip>
			<f:SimpleForm title="{i18n>labelLoadInfo}" adjustLabelSpan="false" editable="false" emptySpanL="0" emptySpanM="0" emptySpanS="0"
				emptySpanXL="0" labelSpanL="4" labelSpanM="4" labelSpanS="4" labelSpanXL="4" layout="ResponsiveGridLayout" singleContainerFullSize="true"
				visible="{parts:[ 'Carrier' ], formatter:'.formatter.showForm'}">
				<f:content>
					<Label text="{i18n>loadNumber}" class="labelPadding popupFont"/>
					<Text text="{LoadNumber}" class="popupFont"/>
					<Label text="{i18n>labelGate}" class="labelPadding popupFont"/>
					<Text text="{Gate}" class="popupFont"/>
					<Label text="{i18n>labelCarrier}" class="labelPadding popupFont"/>
					<Text text="{Carrier}" class="popupFont"/>
					<Label text="{i18n>labelStackingfactor}" class="labelPadding popupFont"/>
					<Text text="{Stackingfactor}" class="popupFont"/>
					<Label text="{i18n>labelTimeFrame}" class="labelPadding popupFont"/>
					<Text text="{Timeframe}" class="popupFont"/>
					<Label text="{i18n>labelLicensePlate}" class="labelPadding popupFont"/>
					<Text text="{License}" class="popupFont"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<endButton>
			<Button text="{monitorView>/cancelLabel}" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>