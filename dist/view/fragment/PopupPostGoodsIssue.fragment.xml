<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog title="{i18n>popupHeaderPGI}" type="Message" state="None" verticalScrolling="false" horizontalScrolling="false">
		<content>
			<BusyIndicator text="{monitorView>/PGI/displayText}" size="3em" class="fullWidth"/>
			<ProgressIndicator class="sapUiSmallMarginBottom" percentValue="{monitorView>/PGI/percentage}" displayValue="{monitorView>/PGI/progressText}"
				showValue="true" state="None"/>
		</content>
		<endButton>
			<Button text="{monitorView>/cancelLabel}" press="onClosePGIDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>